<!-- Success/Failure Toast starts -->
<div class="row" style="margin-bottom: 10px;">
  <div class="alert alert-dismissible fade show myAlert col-md-8 col-sm-6 col-xs-6" role="alert" style="display: none;">
    <span></span>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
<!-- Success/Failure Toast ends -->

<!-- Auth E-Mail Card starts -->
<div class="card mx-auto text-center card-container signin" style="width: 25rem; opacity: 0.8; background: white;">
  <div class="card-body" style="box-shadow: 0px 5px 10px 0px#171313;">

    <form class="form-signin registered-user" id="authMailForm" method="POST" action="/validateAuthToken">
      {{#if exceededMailSendLimit}}
        <p style="font-size: 17px; font-style: italic; color: red;">Sorry, we cannot send you an Email with Auth Token because you have <b>Exceeded</b> your mail send limit for the day.</p>
      {{/if}}

      <p style="font-style: italic; font-size: 20px;"> Please Enter the token sent to your <strong>E-Mail address</strong> to authenticate yourself!</p>
      <br>
      {{#if err}}
        <input type="text" class="form-control errBox" style="margin-bottom: 10px; font-weight: bold;" name="authTokenInput" id="authTokenInput" placeholder="Enter Token..." required onfocus="onfocusAction('authTokenInput'); return false;">
        <span id="authTokenInput_err" class="errMsgSpan float-left">*Enter valid token</span>
      {{else}}
        <input type="text" class="form-control" style="margin-bottom: 10px; font-weight: bold;" name="authTokenInput" id="authTokenInput" placeholder="Enter Token..." required onfocus="onfocusAction('authTokenInput'); return false;">
        <span id="authTokenInput_err" class="errMsgSpan float-left" style="display: none;">*Enter valid token</span>
      {{/if}}
      <!-- This field stores the disable/enable status of Re-send auth token button -->
      <input type="hidden" name="resendTokenBtnDisable" id="resendTokenBtnDisable" value="true">

      <button class="btn btn-lg btn-outline-primary btn-block" type="submit" id="btn-authToken" onclick="validateAuthTokenInput(event);" style="margin-top: 20px;">Take Me to my account</button>
      <br>
      {{#if resendBtnDisable}}
        <button class="btn btn-link" id="btn-resendToken" name="btn-resendToken"
        disabled="true" >Re-Send Token</button>
      {{else}}
        <button class="btn btn-link" id="btn-resendToken" name="btn-resendToken">Re-Send Token</button>
        <p style="font-size: 11px; margin-top: -8px; color: red;" id="oneTimeOnlyResend">(One time only)</p>
      {{/if}}
    </form>

  </div>
</div>
<!-- Auth E-Mail Card Ends -->